<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp_image_2024_08_29_at_11_13_57_0b26d1e9"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/loginbackground"
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:fontFamily="sans-serif"
        android:text="E-mail"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginbackground" />

    <EditText
        android:id="@+id/enteremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter email"
        android:paddingLeft="1dp"
        android:paddingRight="40dp"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:text="Password"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/enterpass"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enterpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:hint="Enter password"
        android:paddingLeft="1dp"
        android:paddingRight="40dp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#B27E63"
        android:text="Login"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@+id/enterpass"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/loggoogle"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginbtn" />

    <ImageView
        android:id="@+id/signfb"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>